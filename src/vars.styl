use('./stylus_get_color.js')
use('./stylus_get_cdn_url.js')

$zIndexAppBar = 99
$zIndexTabs = 100
$zIndexShareAnyModal = 200
$zIndexHeadsUp = 10000
$zIndexInstallOverlay = 300
$zIndexSheet = 300

// TODO: move to vars.json, allow js to use (cardList)
$breakPointSmall = 340px
$breakPointMedium = 768px
$breakPointLarge = 840px

$contentMaxWidth = 1280px

$inputMaxWidth = 600px

$cdnUrl = getCdnUrl()

clearfix()
  zoom: 1

  &:before, &:after
    content: ''
    display: table

  &:after
    clear: both

font-h1()
  font-family: Roboto
  color: getColor('$white')
  font-weight: 300
  font-size: 20px
  letter-spacing: 1px
  text-transform: uppercase

  @media (min-width: $breakPointLarge)
    font-size: 24px

font-title()
  font-family: Roboto
  color: getColor('$white')
  font-weight: 600
  font-size: 14px

  @media (min-width: $breakPointLarge)
    font-size: 16px

font-subhead()
  font-title()
  text-transform: uppercase

font-button()
  font-family: Roboto
  font-weight: 300
  color: getColor('$white')
  line-height: 16px
  font-size: 14px
  text-transform: uppercase
  @media (min-width: $breakPointLarge)
    font-size: 16px

font-body1()
  font-family: Roboto
  font-weight: 400
  color: rgba(255, 255, 255, 0.54)
  line-height: 20px
  font-size: 14px
  @media (min-width: $breakPointLarge)
    font-size: 16px

font-input()
  font-body()
  font-size: 16px
  @media (min-width: $breakPointLarge)
    font-size: 16px

font-caption1()
  font-family: Roboto
  color: getColor('$white')
  font-weight: 400
  font-size: 12px

  @media (min-width: $breakPointLarge)
    font-size: 14px

font-caption2()
  font-family: Roboto
  color: getColor('$white')
  font-weight: 400
  font-size: 10px

  @media (min-width: $breakPointLarge)
    font-size: 12px
