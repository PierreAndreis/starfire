@require 'zorium-paper/base'

@require '../../vars'

$zIndexUploadOverlay = 1

.z-edit-group
  > .actions
    display: flex
    height: 56px
    background: getColor('$tertiary700')
    cursor: pointer

    > .action
      flex: 1
      display: flex
      align-items: center
      justify-content: center

      &:hover
        background: getColor('$tertiary900')

      > .icon
        margin-right: 12px

      > .text
        responsive-font-button()
        font-weight: 400

  > .content
    padding: 16px

    > .button
      margin-bottom: 16px

    > .title
      responsive-font-subhead()
      text-transform: uppercase
      color: getColor('$primary500')
      padding: 14px 0

    > .input
      margin-top: -8px

    > .flex
      display: flex
      align-items: center

