@require 'zorium-paper/base'

@require '../../vars'

json('zorium-paper/colors.json')

.z-conversations
  flex: 1
  width: 100%
  overflow: auto
  -webkit-overflow-scrolling: touch
  padding-top: 8px

  > .g-grid
    > .no-conversations
      text-align: center
      padding: 16px

    > .conversation
      display: flex
      padding: 14px 16px

      &.is-unread
        > .status
          width: 4px
          height: 4px
          border-radius: 50%
          background: getColor('$primary500')

      > .avatar
        width: 40px
        height: 40px
        border-radius: 50%
        margin-right: 16px

      > .right
        flex: 1
        display: flex
        flex-direction: column

        > .info
          flex: 1
          display: flex
          align-items: center

          > .name
            responsive-font-body1()

          > .time
            responsive-font-caption()
            margin-left: auto
            color: getColor('$primary500')

        > .last-message
          color: getColor('$white30')
