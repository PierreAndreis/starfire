@require 'zorium-paper/base'

@require '../../vars'

json('zorium-paper/colors.json')

.z-conversations
  flex: 1
  width: 100%
  overflow: auto
  -webkit-overflow-scrolling: touch

  > .conversation
    display: flex
    padding: 14px 16px

    > .count
      responsive-font-body2()
      width: 40px
      height: 40px
      border-radius: 50%
      background: getColor('$black')
      margin-right: 16px
      display: flex
      justify-content: center
      align-items: center

    > .info
      > .title
        responsive-font-subhead()
        margin-bottom: 8px

      > .text
        responsive-font-body1()
        color: getColor('$white70')

      > .message-info
        responsive-font-caption()
        color: getColor('$white30')
