@require 'zorium-paper/base'

@require '../../vars'

.z-group-chat
  flex: 1
  display: flex
  flex-direction: column
  position: relative
  overflow: auto
  -webkit-overflow-scrolling: touch

  > .current-channel
    zp-shadow-1()
    background: getColor('$tertiary500')
    width: 100%
    height: 36px
    display: flex
    padding: 10px
    box-sizing: border-box
    align-items: center

    &.is-unread
      > .status
        border-radius: 50%
        background: getColor('$primary500')

    > .status
      width: 4px
      height: 4px
      margin: auto 8px auto 0

    > .hashtag
      responsive-font-body2()
      color: getColor('$white30')

    > .name
      responsive-font-body3()
      color: getColor('$white')
      margin-left: 8px

    > .arrow
      margin-left: auto
      margin-right: 10px
      width: 0
      height: 0
      border-left: 5px solid getColor('$white')
      border-top: 5px solid transparent
      border-bottom: 5px solid transparent
