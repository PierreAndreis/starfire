@require 'zorium-paper/base'

@require '../../vars'

.z-markdown-editor
  flex: 1
  display: flex
  flex-direction: column

  > .panel
    background: getColor('$tertiary700')
    
    > .icon
      display: inline-block

  > .textarea
    width: 100%
    display: flex
    flex: 1
    background: getColor('$tertiary900')
    padding: 16px
    outline: none
    border: none
    box-sizing: border-box


.desktop
  .z-markdown-editor
    > .textarea
      max-width: 560px
      margin: 0 auto
      background: getColor('$tertiary700')
      box-shadow: 0 0 4px 0 rgba(0, 0, 0, 0.5)
      padding: 24px
