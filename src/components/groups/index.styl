@require 'zorium-paper/base'

@require '../../vars'

.z-groups
  flex: 1
  width: 100%
  overflow: auto
  -webkit-overflow-scrolling: touch
  padding: 16px

  > .unread-invites
    display: flex
    align-items: center
    padding: 16px 0

    > .icon
      margin-right: 32px

    > .chevron
      margin-left: auto

  > .group-list
    > .g-grid
      > .title
        responsive-font-subhead()
        color: getColor('$primary500')
