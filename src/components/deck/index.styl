

@require '../../vars'

.z-deck
  flex: 1
  display: flex
  flex-direction: column

  > .deck
    padding: 16px
    background: getColor('$tertiary500')

    > .g-grid
      > .set-as-deck
        margin-top: 8px

  > .stats
    background: getColor('$tertiary900')
    flex: 1

    > .g-grid
      > .row
        display: flex
        align-items: center
        padding: 16px

        > .icon
          margin-right: 34px
          width: 24px
          height: 24px

        > .stat
          flex: 1
          font-body1()

          &.bold
            font-title()

        > .right
          font-body1()

          &.button
            font-button()
            color: getColor('$primary500')
