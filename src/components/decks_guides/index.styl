@require 'zorium-paper/base'

@require '../../vars'

.z-deck-guides
  flex: 1
  width: 100%
  overflow: auto
  -webkit-overflow-scrolling: touch

  > .guides
    width: 100%

    > .no-guides
      font-body2()
      text-align: center
      padding: 16px

    > .guide
      padding: 16px
      display: block

      > .g-grid
        > .author
          font-caption1()
          color: getColor('$tertiary300')
          display: flex

          > .name
            margin-left: 8px

        > .title
          font-title()
          margin-top: 8px

        > .summary
          font-body2()
          margin-top: 8px

        > .deck
          margin-top: 8px

    > .divider
      width: 100%
      height: 1px
      background: getColor('$white12')
      margin: 0
