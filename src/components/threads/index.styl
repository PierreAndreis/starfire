@require 'zorium-paper/base'

@require '../../vars'

.z-threads
  flex: 1
  width: 100%
  overflow: auto
  -webkit-overflow-scrolling: touch

  > .no-threads
    padding: 16px
    text-align: center

  > .g-grid
    margin-top: 4px

    > .thread
      display: flex
      padding: 14px 16px

      > .count
        font-body1()
        width: 40px
        height: 40px
        border-radius: 50%
        background: getColor('$black')
        margin-right: 16px
        display: flex
        justify-content: center
        align-items: center

      > .content
        flex: 1

        > .author
          font-caption1()
          color: getColor('$tertiary300')
          display: flex
          align-items: center

          > .name
            margin-right: 4px

          > .middot
            margin-right: 4px

        > .title
          font-title()
          margin-top: 8px

        > .text
          font-body1()

        > .stats
          responsive-font-caption()
          color: getColor('$tertiary300')
          display: flex
          align-items: center
          margin-top: 8px

          > .votes
            display: flex
            align-items: center

          > .comments
            margin-left: auto
            display: flex
            align-items: center

      > .right
        margin-left: auto

  > .divider
    width: 100%
    height: 1px
    background: getColor('$white12')

  > .fab
    position: fixed
    bottom: 16px
    right: 16px
    z-index: 50
