@require 'zorium-paper/base'

@require '../../vars'

.z-deck-list
  flex: 1
  width: 100%
  overflow: auto
  -webkit-overflow-scrolling: touch

  > .decks
    width: 100%

    > .no-decks
      font-body2()
      text-align: center
      padding: 16px

    > .deck
      padding: 0 16px 16px 16px
      display: block

      > .g-grid
        > .info
          display: flex
          align-items: center

          > .name
            font-body1()
            flex: 1

        > .cards
          > .row
            margin: -4px 0
            clearfix()

            > .card
              float: left
              padding: 4px
              box-sizing: border-box

    > .divider
      width: 100%
      height: 1px
      background: getColor('$white12')
      margin: 0
