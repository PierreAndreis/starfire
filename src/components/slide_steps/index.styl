@require 'zorium-paper/base'

@require '../../vars'

json('zorium-paper/colors.json')

.p-slide-steps
  > .button-wrapper
    position: absolute
    z-index: 999
    left: 0
    bottom: 64px
    width: 100%
    padding: 0 16px
    box-sizing: border-box
    text-align: center
    display: flex
    justify-content: center

    > .button
      responsive-font-buttonon()
      display: inline-block
      text-decoration: none
      margin-left: auto
      margin-right: auto
      -webkit-tap-highlight-color: transparent
      background: $white
      border-radius: 24px
      padding: 16px 24px
      text-transform: uppercase
      border: none
      outline: 0
      cursor: pointer
      transition: color 0.25s cubic-bezier(0.4, 0, 0.2, 1)
      box-sizing: border-box

      &.secondary
        margin-left: 16px
        margin-right: auto
        background-color: rgba(0, 0, 0, 0)
        color: getColor('$white')
        border: 1px solid getColor('$white')

  > .bottom-bar
    position: fixed
    z-index: 999
    bottom: 0
    left: 0%
    display: flex
    width: 100%
    height: 56px
    align-items: center
    padding: 0 8px
    box-sizing: border-box

    > .icon
      width: 48px

      > .text
        responsive-font-body2()
        color: $white
        text-transform: uppercase
        text-align: center

    > .step-counter
      display: flex
      flex: 1
      justify-content: center
      width: 100%
      margin: 16px 0

      > .step-dot
        width: 6px
        height: 6px
        border-radius: 50%
        margin-right: 4px
        background: getColor('$white30')

        &.is-active
          background: $white

