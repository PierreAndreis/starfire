@require 'zorium-paper/base'

@require '../../vars'

.z-profile-landing
  flex: 1
  width: 100%
  overflow: auto
  -webkit-overflow-scrolling: touch
  box-sizing: border-box
  padding: 0 16px 16px 16px
  text-align: center
  position: relative

  > .header-background
    background: getColor('$primary500')
    width: 100%
    height: 168px
    position: absolute
    top: 0
    left: 0

  > .content
    position: relative
    z-index: 1
    padding: 16px
    width: 100%
    box-sizing: border-box

    > .g-grid
      > .header
        > .title
          font-h1()
          text-align: center

        > .description
          font-body1()
          margin-top: 8px
          text-align: center

      > .form
        background: getColor('$tertiary700')
        border-radius: 2px
        padding: 16px
        max-width: 480px
        margin: 16px auto 0 auto

        > .input
          text-align: left

        > .button
          margin-top: 24px

  > .g-grid
    > .actions
      display: flex
      max-width: 400px
      margin: 0 auto

      > .button
        flex: 1

    > .subhead
      font-subhead()
      color: getColor('$primary500')
      text-align: left
      margin-top: 20px

    > .terms
      font-caption1()
      color: getColor('$tertiary300')
      margin-top: 20px

.z-profile-landing_dialog
  > .description
    font-caption1()

  > .elixir-collector
    display: block
    background-image: url('https://cdn.wtf/d/images/starfire/elixir_collector.svg')
    background-size: 100%
    background-repeat: no-repeat
    width: 160px
    height: 160px
    margin: 20px auto 0 auto
