@require 'zorium-paper/base'

@require '../../vars'

.z-group-manage-member
  // flex: 1
  // display: flex
  // flex-direction: column
  overflow: auto
  -webkit-overflow-scrolling: touch

  > .content
    display: flex
    flex-direction: column

    > .info
      background: getColor('$tertiary700')
      padding: 16px

      > .g-grid
        > .flex
          display: flex

          > .name
            responsive-font-title()
            color: getColor('$white')

          > .join-date
            margin-left: auto
            responsive-font-caption()
            color: getColor('$white30')

            > .title
              font-weight: 500
              text-transform: uppercase

            > .date
              margin-top: 4px
