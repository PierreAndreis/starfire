@require 'zorium-paper/base'

@require '../../vars'

.z-group-manage-member
  overflow: auto
  -webkit-overflow-scrolling: touch

  > .content
    display: flex
    flex-direction: column

    > .info
      background: getColor('$tertiary700')
      padding: 16px

      > .g-grid
        > .flex
          display: flex

          > .name
            font-h1()
            color: getColor('$white')

          > .join-date
            margin-left: auto
            font-caption1()
            color: getColor('$white54')

            > .title
              font-title()
              text-transform: uppercase

            > .date
              margin-top: 4px
