@require 'zorium-paper/base'

@require '../../vars'

.z-splash
  flex: 1
  overflow: auto
  -webkit-overflow-scrolling: touch
  display: flex
  flex-direction: column
  background: getColor('$tertiary900')

  > .content
    margin: auto

    > .logo
      width: 227px
      height: 30px
      margin: 0 auto
      background: url($cdnUrl + '/sf_logo.svg')

  > .actions
    padding: 16px
    width: 100%
    max-width: 380px
    box-sizing: border-box
    margin: 0 auto

    > .description
      font-body1()
      text-align: center
      display: block
      margin-bottom: 12px

    > .button
      margin-bottom: 8px

      &:last-child
        margin-bottom: 0
