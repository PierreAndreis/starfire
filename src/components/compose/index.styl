@require 'zorium-paper/base'

@require '../../vars'

.z-compose
  flex: 1
  width: 100%
  overflow: auto
  -webkit-overflow-scrolling: touch
  display: flex
  flex-direction: column

  > .actions
    display: flex
    height: 56px
    background: getColor('$tertiary500')
    cursor: pointer

    > .action
      flex: 1
      display: flex
      align-items: center
      justify-content: center

      &:hover
        background: getColor('$tertiary900')

      > .icon
        margin-right: 12px

      > .text
        responsive-font-button()
        font-weight: 400

  > .g-grid
    flex: 1
    display: flex
    flex-direction: column

    > .title, > .textarea
      width: 100%
      background: getColor('$tertiary900')
      padding: 16px
      margin: 0
      appearance: none
      border: none
      outline: none

      &::placeholder
        responsive-font-body1()
        color: getColor('$white70')

    > .textarea
      flex: 1

    > .divider
      width: 100%
      height: 1px
      background: getColor('$white12')
      margin: 0
