@require 'zorium-paper/base'

@require '../../vars'

.z-cards
  flex: 1
  width: 100%
  overflow: auto
  -webkit-overflow-scrolling: touch

  > .cards
    width: 100%

    > .g-grid
      > .card
        padding: 8px 16px 16px 16px
        display: flex
        align-items: center

        > .change
          font-caption1()
          margin-right: 12px
          width: 14px

        > .image
          margin-right: 16px

        > .info
          flex: 1

          > .row
            display: flex
            align-items: center
            margin-top: 12px

            > .right
              margin-left: auto
              font-body1()

          > .name
            font-title()
            color: getColor('$tertiary500Text')
            flex: 1

    > .divider
      width: 100%
      height: 1px
      background: getColor('$white12')
      margin: 0
