@require 'zorium-paper/base'

@require '../../vars'

.z-request-invite
  flex: 1
  overflow: auto
  -webkit-overflow-scrolling: touch
  padding: 16px
  display: flex
  flex-direction: column
  justify-content: center

  > .title
    responsive-font-title()
    text-transform: uppercase
    text-align: center
    margin-bottom: 32px

  > .description
    responsive-font-body2()
    margin-bottom: 32px
    text-align: center

    > p
      margin-top: 12px

      &:first-child
        margin-top: 0
