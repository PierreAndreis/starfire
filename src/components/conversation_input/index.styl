@require 'zorium-paper/base'

@require '../../vars'

.z-conversation-input
  > .g-grid
    box-shadow: 0 1px 4px getColor('$black26')
    background: getColor('$tertiary500')

    > .panel
      transition: height 0.2s cubic-bezier(0.4, 0, 0.2, 1)
      max-height: 150px // also in conversation_input_textarea

    > .bottom-icons
      align-items: center
      position: relative
      background: getColor('$tertiary500')
      display: none

      &.is-visible
        display: flex

      > .icon
        position: relative
        width: 48px

        > .upload-overlay
          position: absolute
          left: 0
          top: 0
          width: 100%
          height: 100%
          z-index: 1
          cursor: pointer

      > .powered-by-giphy
        width: 140px
        height: 14px
        margin-left: auto
        margin-right: 8px
        background: url($cdnUrl + '/giphy_horiz.png') no-repeat
        background-size: 100%
        display: none

  &.is-gifs-panel
    > .g-grid
      > .bottom-icons
        > .powered-by-giphy
          display: block
