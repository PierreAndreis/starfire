@require 'zorium-paper/base'

@require '../../vars'

json('zorium-paper/colors.json')

.z-thread
  flex: 1
  width: 100%
  overflow: auto
  -webkit-overflow-scrolling: touch

  > .no-messages
    padding: 16px

  > .g-grid
    > .message
      display: flex
      padding: 14px 16px

      &.is-original-post
        background: getColor('$tertiary700')

      > .avatar
        width: 40px
        height: 40px
        margin-right: 16px

      > .info
        > .title
          responsive-font-subhead()
          margin-bottom: 8px

        > .text
          responsive-font-body1()
          color: getColor('$white70')
          margin-bottom: 8px

        > .message-info
          responsive-font-caption()
          color: getColor('$white30')

  > .divider
    width: 100%
    height: 1px
    background: getColor('$white12')
    margin: 8px 0

  > .fab
    position: fixed
    bottom: 16px
    right: 16px
    z-index: 50
