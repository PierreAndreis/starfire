@require 'zorium-paper/base'

@require '../../vars'

.z-info-block
  flex: 1
  display: flex
  padding: 16px

  > .inner
    max-width: $inputMaxWidth
    margin: 0 auto
    display: flex
    flex: 1
    flex-direction: column

    > .top
      margin-top: auto

    > .bottom
      margin-bottom: auto

    > .title
      responsive-font-title()
      text-transform: uppercase
      text-align: center
      margin-bottom: 16px

    > .content
      responsive-font-body2()
      text-align: center

    > .form
      margin-top: 32px
      display: flex
      flex-direction: column
