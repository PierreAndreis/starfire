@require 'zorium-paper/base'

@require '../../vars'

$zIndexTextarea = 2

.z-conversation
  flex: 1
  display: flex
  flex-direction: column
  width: 100%

  > .g-grid
    display: flex
    flex: 1
    flex-direction: column

    > .messages
      flex: 1
      overflow-y: auto
      overflow-x: hidden
      -webkit-overflow-scrolling: touch
      // margin-bottom: 64px
      width: 100%
      opacity: 0
      padding: 8px

      &.is-loaded
        opacity: 1

  @media (min-width: $breakPointMedium)
    > .textarea-container
      background: getColor('$tertiary900')

      > .g-grid
        margin-bottom: 16px
