@require 'zorium-paper/base'

@require '../../vars'

.z-events
  flex: 1
  width: 100%
  overflow: auto
  -webkit-overflow-scrolling: touch

  > .g-grid
    > .no-events
      font-body1()
      text-align: center
      padding: 16px
      margin-top: 96px

      > .icon
        margin-bottom: 16px

    > .event-group
      display: flex

      > .date
        padding: 16px
        width: 60px
        text-align: center

        > .month
          font-caption2()

        > .day
          font-h1()
          margin-top: 4px

      > .events
        flex: 1

        > .event
          padding: 16px
          display: block

          > .creator
            font-caption1()
            color: getColor('$white54')
            display: flex

            > .name
              margin-left: 8px

          > .name
            font-title()
            margin-top: 8px
            color: getColor('$tertiary500Text')
            flex: 1

          > .details
            font-caption1()
            margin-top: 8px
            color: getColor('$white54')


        > .divider
          width: 100%
          height: 1px
          background: getColor('$white12')
          margin: 0
