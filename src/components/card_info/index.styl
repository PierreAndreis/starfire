@require 'zorium-paper/base'

@require '../../vars'

.z-card-info
  flex: 1
  display: flex
  flex-direction: column

  > .card
    display: flex
    align-items: center
    justify-content: center
    background: getColor('$tertiary500')
    padding-bottom: 8px

  > .stats
    background: getColor('$tertiary900')
    flex: 1

    > .g-grid
      > .row
        display: flex
        align-items: center
        padding: 16px

        > .icon
          margin-right: 34px
          width: 24px
          height: 24px

        > .title
          responsive-font-body2()
          font-weight: 500
          width: 24px
          text-transform: uppercase
          margin-right: 34px

        > .stat
          flex: 1
          responsive-font-body2()

          &.bold
            font-weight: 500

        > .right
          responsive-font-body2()

          &.button
            responsive-font-button()
            color: getColor('$primary500')

    > .divider
      width: 100%
      height: 1px
      background: getColor('$white12')
      margin: 0
