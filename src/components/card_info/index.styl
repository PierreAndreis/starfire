@require 'zorium-paper/base'

@require '../../vars'

.z-card-info
  flex: 1
  overflow: auto
  -webkit-overflow-scrolling: touch

  > .card
    display: flex
    align-items: center
    justify-content: center
    background: getColor('$tertiary700')
    padding-bottom: 8px

  > .stats
    background: getColor('$tertiary900')
    flex: 1

    > .g-grid
      > .row
        display: flex
        align-items: center
        padding: 16px

        > .icon
          margin-right: 34px
          width: 24px
          height: 24px

        > .title
          font-title()
          width: 24px
          text-transform: uppercase
          margin-right: 34px

        > .dropdown
          width: 200px
          margin-top: -10px

        > .stat
          flex: 1
          font-body1()

          &.bold
            font-title()

        > .right
          font-body1()

          &.button
            font-button()
            color: getColor('$primary500')

    > .divider
      width: 100%
      height: 1px
      background: getColor('$white12')
      margin: 0
