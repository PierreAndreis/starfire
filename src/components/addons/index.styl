@require 'zorium-paper/base'

@require '../../vars'

.z-addons
  flex: 1
  width: 100%
  overflow: auto
  -webkit-overflow-scrolling: touch

  > .title
    font-subhead()
    color: getColor('$primary500')
    padding: 16px
    margin: 0

  > .addons
    > .addon
      display: flex
      padding: 16px
      min-width: 0 // fix
      border-bottom: 1px solid getColor('$white12')

      > .icon
        width: 40px
        height: 40px

      > .info
        margin-left: 16px

        > .name
          font-title()
          overflow: hidden

          > .creator
            font-caption2()
            display: inline-block
            margin-left: 4px

        > .description
          font-caption2()
