@require 'zorium-paper/base'

@require '../../vars'

$zIndexDrawer = 300

.z-channel-drawer
  display: none
  position: absolute
  z-index: $zIndexDrawer
  width: 100%
  height: 100%
  top: 0
  left: 0
  flex-direction: column
  background: getColor('$tertiary600')

  &.is-open
    display: flex

  > .group-name
    display: flex
    align-items: center
    padding: 16px

    > .badge
      width: 24px
      height: 24px

    > .name
      font-title()
      margin-left: 32px

  > .menu
    display: flex

  > .divider
    width: 100%
    height: 1px
    background: getColor('$white12')
    margin: 8px 0

  > .manage-channels
    padding: 16px
    display: flex
    align-items: center
    cursor: pointer

    > .text
      font-body1()
      margin-left: 36px
