@require 'zorium-paper/base'

@require '../../vars'

.z-add-deck
  flex: 1
  width: 100%
  display: flex
  flex-direction: column
  background: getColor('$tertiary500')

  > .header
    display: flex
    align-items: center
    padding: 0 8px

    > .icon
      padding-top: 8px

    > .name
      flex: 1

  > .selected
    padding: 16px

  > .cards
    background: getColor('$tertiary900')
    padding: 16px
    flex: 1
    display: flex

    > .scroller
      flex: 1
      overflow: auto
      -webkit-overflow-scrolling: touch
