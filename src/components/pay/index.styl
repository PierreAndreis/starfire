@require 'zorium-paper/base'

@require '../../vars'

.z-pay
  flex: 1
  overflow: auto
  display: flex
  flex-direction: column
  -webkit-overflow-scrolling: touch
  padding: 32px 16px 16px 16px

  > .title
    responsive-font-title()
    text-transform: uppercase
    text-align: center
    margin-bottom: 32px

  > .product, > .due
    display: flex
    margin-bottom: 8px
    responsive-font-body2()

    &.due
      font-weight: 500
      margin-top: 8px

    > .right
      margin-left: auto

  > .form
    margin-top: auto
    margin-bottom: auto

    > .payment-errors
      responsive-font-caption()
      color: getColor('$red500')

    > .form-row
      &.flex
        display: flex
        align-items: baseline

        > .slash
          margin: 0 16px

    > .button
      margin-top: 16px
