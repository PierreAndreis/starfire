@require 'zorium-paper/base'

@require '../../vars'

.z-channel-list
  > .channel
    padding: 12px 16px
    display: flex
    cursor: pointer

    &.is-selected
      background: getColor('$tertiary500')

    > .hashtag
      font-body1()
      color: getColor('$white30')

    > .info
      margin-left: 8px

      > .name
        font-title()
        color: getColor('$white')

      > .description
        font-caption1()
        color: getColor('$white30')
        margin-top: 4px
