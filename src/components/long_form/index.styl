@require 'zorium-paper/base'

@require '../../vars'

.z-long-form
  flex: 1
  display: flex
  flex-direction: column

  > .g-grid
    flex: 1
    overflow: auto
    -webkit-overflow-scrolling: touch

    > .content
      > .row
        display: flex
        padding: 12px 16px

        &.is-input
          > .icon
            padding-top: 20px

        > .icon
          width: 48px

        > .input
          margin-left: 24px
          flex: 1

          &.flex
            display: flex

          > .label
            font-body1()
            color: getColor('$white')

          > .right
            margin-left: auto
