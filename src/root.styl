@require 'normalize-styl/normalize.styl'
@require 'zorium-paper/base'

@require './grid.styl'
@require './vars'

html, body
  width: 100%
  height: 100%

body
  zp-font-body1()
  -webkit-tap-highlight-color: transparent
  background: getColor('$tertiary900')
  color: getColor('$white')

#zorium-root
  // if this page is in a frame on iOS, iOS tries to auto-expand
  // the frame to fit the page.
  // position absolute here messes up some older android devices
  &.is-ios
    position: absolute
    width: 100%
    height: 100%
    top: 0
    left: 0
    overflow: auto
    -webkit-overflow-scrolling: touch

  > .z-root
    display: flex

    > .page
      flex: 1

a
  color: inherit
  text-decoration: inherit

body .zp-button > .button
  responsive-font-button()

// hack for chrome yellow input for autocomplete
input:-webkit-autofill,
input:-webkit-autofill:hover,
input:-webkit-autofill:focus,
input:-webkit-autofill:active
  transition: background-color 5000s ease-in-out 0s
  -webkit-text-fill-color: white !important
