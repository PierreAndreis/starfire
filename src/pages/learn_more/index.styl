.p-learn-more_step-image
  display: block
  margin: auto
  background-size: 100% auto

  &.number-1
    background-image: url($cdnUrl + '/onboarding_card.svg?1')
    height: 132px
    width: 225px

  &.number-2
    background-image: url($cdnUrl + '/onboarding_chat.svg')
    height: 124px
    width: 190px

  &.number-3
    background-image: url($cdnUrl + '/onboarding_tools.svg')
    height: 171px
    width: 133px

  @media (min-width: $breakPointMedium)
    width: 448px
    height: 520px
    display: block
    // margin: auto 0 auto auto
    background-size: auto 100%

.p-learn-more_step-content
  width: 100%
  responsive-font-body2()
