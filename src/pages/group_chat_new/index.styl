@require 'zorium-paper/base'

@require '../../vars'

.p-group-chat
  display: flex
  flex-direction: column

  > .content
    flex: 1
    display: flex
    flex-direction: column
    position: relative

  > .overlay
    position: fixed
    z-index: 999999
    left: 0
    top: 0
    width: 100%
    height: 100%

.p-group-chat_title
  padding: 12px
  margin-left: -12px
  cursor: pointer
  position: relative

  .hashtag
    color: getColor('$tertiary900')
